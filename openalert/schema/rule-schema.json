{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "CMCCS SIEM rule specification V1.0.0 (2024-12-12)",
  "description": "Schema of rule in Log Correlation module",
  "type": "object",
  "required": [
    "id",
    "name",
    "query"
  ],
  "$defs": {
    "complexValue": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "integer"
              },
              {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            ]
          }
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      ]
    },
    "datePattern": {
      "type": "string",
      "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$"
    },
    "uuidType": {
      "type": "string",
      "format": "uuid"
    }
  },
  "properties": {
    "id": {
      "$ref": "#/$defs/uuidType"
    },
    "name": {
      "type": "string",
      "maxLength": 256
    },
    "description": {
      "type": "string",
      "maxLength": 65535
    },
    "references": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "author": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "enabled": {
      "type": "boolean"
    },
    "status": {
      "type": "string",
      "enum": [
        "stable",
        "test",
        "experimental"
      ]
    },
    "license": {
      "type": "string"
    },
    "index": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "date": {
      "$ref": "#/$defs/datePattern"
    },
    "modified": {
      "$ref": "#/$defs/datePattern"
    },
    "query": {
      "type": "object",
      "required": [
        "condition"
      ],
      "properties": {
        "condition": {
          "type": "string"
        }
      },
      "additionalProperties": {
        "$ref": "#/$defs/complexValue"
      }
    },
    "exceptions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "condition"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "condition": {
            "type": "string"
          }
        },
        "additionalProperties": {
          "$ref": "#/$defs/complexValue"
        }
      }
    },
    "exceptionsList": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "$ref": "#/$defs/uuidType"
      }
    },
    "fields": {
      "type": "object",
      "properties": {
        "includes": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "excludes": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "enhancements": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "eql": {
                "type": "boolean"
              },
              "query": {
                "type": "string"
              }
            },
            "required": [
              "eql",
              "query"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "indicatorMatch": {
                "type": "boolean"
              },
              "index": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "query": {
                "type": "object",
                "required": [
                  "condition"
                ],
                "properties": {
                  "condition": {
                    "type": "string"
                  }
                },
                "additionalProperties": {
                  "$ref": "#/$defs/complexValue"
                }
              },
              "mapping": {
                "type": "array",
                "properties": {
                  "entries": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "field": {
                          "type": "string"
                        },
                        "value": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "field",
                        "value"
                      ],
                      "additionalProperties": false
                    }
                  }
                },
                "required": [
                  "entries"
                ],
                "additionalProperties": false
              }
            },
            "required": [
              "indicatorMatch",
              "index",
              "mapping"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "riskScore": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "severity": {
      "type": "string",
      "enum": [
        "informational",
        "low",
        "medium",
        "high",
        "critical"
      ]
    },
    "falsePositives": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "schedule": {
      "type": "object",
      "properties": {
        "interval": {
          "type": "string"
        },
        "bufferTime": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "maxSignals": {
      "type": "integer",
      "minimum": 0
    },
    "threat": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "framework",
          "tactic"
        ],
        "properties": {
          "framework": {
            "type": "string"
          },
          "tactic": {
            "type": "object",
            "required": [
              "id"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "reference": {
                "type": "string",
                "format": "uri"
              }
            },
            "additionalProperties": false
          },
          "technique": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id"
              ],
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "reference": {
                  "type": "string",
                  "format": "uri"
                },
                "subTechnique": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [
                      "id"
                    ],
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "reference": {
                        "type": "string",
                        "format": "uri"
                      }
                    },
                    "additionalProperties": false
                  }
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "actions": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}